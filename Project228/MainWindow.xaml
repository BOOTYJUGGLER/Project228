<Window x:Class="Project228.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project228"
        mc:Ignorable="d"
        Title="Авторизация" Height="650" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Авторизация" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30"/>
        <TextBox x:Name="_login" Grid.Row="1" Text="Введите логин" Width="350" Height="50" TextAlignment="Left" VerticalContentAlignment="Center" GotFocus="_login_GotFocus" />
        <PasswordBox x:Name="_password" Grid.Row="2"  Width="350" Height="50" VerticalContentAlignment="Center"/>
        <Button x:Name="_logbuttton" Grid.Row="3" Content="Войти" FontSize="20" Width="100" Height="40" HorizontalAlignment="Left" Margin="100,0,0,0"/>
        <Button x:Name="_regbutton" Grid.Row="3" Content="Регистрация" FontSize="20" Width="150" Height="40" HorizontalAlignment="Right" Margin="0,0,75,0" Click="_regbutton_Click"/>


    </Grid>
</Window>
